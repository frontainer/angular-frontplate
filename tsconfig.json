{
  "compilerOptions": {
    "sourceRoot": "src/js",
    "baseUrl": "src/js",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noEmit": false,
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "**/*-aot.ts",
    "public",
    "config"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit" : true
  }
}
